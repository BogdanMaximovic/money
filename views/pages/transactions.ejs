<% include ../partials/header %>


<script>
 
    
     $(document).ready(function() {
        var myTable = $('#tabledata').DataTable({ "columnDefs":[
            {
                "targets": [4],
                "visible" : false
            }
        ]});
       
        $("#tabledata tbody tr").click(function() {
            
            var row = myTable.row();
            var rowData = myTable.row( this ).data(); 
            
            $('#myModal').modal('show')
            
            $('#id').val(`${rowData[4]}`)
            
      }); 
        $('#delete').click(function(e){
          e.preventDefault();
          
           var id = $('#id').val();
         
          
            var data = {};
            data.id = id;
          
          $.ajax({
            type: 'POST',
            data: JSON.stringify(data),
            contentType: 'application/json',
            url: 'http://localhost:4200/delete',
            success: function(data) {
              console.log('success');
              console.log(JSON.stringify(data));
              }
            });
            window.location.href = "http://localhost:4200/transactions";
        })
    });
 
</script>

<div class="modal" id="myModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Delete this transation?</h5>
              <button class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-text p-3">
                <form action="/delete" method="POST">
                    <div class="form-group m-1 p-1">
                          <label for="idid">Transaction ID</label>
                          <input class="form-control" type="number" name="idid" id="id" value="">
                        </div>
                </form>
                <button class="btn btn-success" data-dismiss="modal" id="delete">Delete</button>
                <button class="btn btn-secondary" data-dismiss="modal" id="close">Close</button>
            </div>
            
          </div>
        </div>
      </div>
      
 <div class="text-center text-light">
    <h1>Transactions</h1>
</div>
<form class="p-3">
    <div class="row">
        <div class="col-md-4 text-center">
            <a href="transactions" class="btn btn-primary btn-lg nav-link text-light">All</a>
        </div>
        <div class="col-md-4 text-center">
            <a href="btnexp" class="btn btn-danger btn-lg nav-link text-light">Expense</a>
        </div>
        <div class="col-md-4 text-center">
            <a href="btninc" class="btn btn-success btn-lg nav-link text-light">Income</a>
        </div>
    </div>
</form>
<div class="table-wrapper-scroll-y divdt p-3">
    <table id="tabledata" class="table table-striped txttbl p-3" cellspacing="0">
        <thead class="font-weight-normal">
            <tr class="text-primary">
                <th>
                    Category
                </th>
                <th>
                    Date
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Comment
                </th>
                <th>
                    ID
                </th>
              </tr>
        </thead>
        <tbody>
            <% obj.forEach(function(name){ %>
            <tr>
                <td>
                    <%= name.categories_name %>
                </td>
                <td>
                    <%= name.main_date%>
                </td>
                <td>
                    <%= name.transactions_amount %>
                </td>
                <td>
                    <%= name.main_comment %>
                </td>
                <td>
                     <%=name.main_transid %>
                </td> 
             </tr>
            
            <% }) %>
        </tbody>
    </table>
    
</div>
 
<p class="badge badge-success pt-1 m-1"><strong>Note:</strong> Click on transaction to delete.</p>
<% include ../partials/footer %>