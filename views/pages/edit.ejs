<% include ../partials/header %>

<script>
    $(document).ready(function() {
        $("table td").click(function() {
            $('#myModal').modal('show')
            let dataFromClick = this.innerText
            $('.modal-body').text(`Old value: ${dataFromClick}`)
        }); 
            $('#save').on('click', function(event) {
                let newValue = $('#name').val();
                console.log(newValue);

                 $.ajax({
                        type: 'GET',
                        url: 'http://localhost:4200/edit/new',
                        contentType: 'application/json',
                        dataType: 'json',
                        data: JSON.stringify({"newValue": newValue }),
                        processData: false,
                        contentType: 'application/json',
                        success: function (data) {
                            alert(data);
                        }
                    });
                 window.location.href="http://localhost:4200/edit/new";

            });
    });
</script>

<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Editing Data</h5>
        <button class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body"></div>
      <div class="modal-text">
          <form action="/edit" method="GET">
              <div class="form-group m-1">
                <label for="name">New value</label>
                <input class="form-control" type="text" id="name" placeholder="Enter new value">
            </div>
          </form>
      </div>
      <div class="modal-footer m-auto">
        <button class="btn btn-success" data-dismiss="modal" id="save">Save</button>
        <button class="btn btn-secondary" data-dismiss="modal" id="close">Close</button>
      </div>
    </div>
  </div>
</div>



