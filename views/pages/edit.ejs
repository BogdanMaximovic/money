<% include ../partials/header %>

<script>
    $(document).ready(function() {
      var myTable = $('#tableedit').DataTable();
        $("#tableedit tbody tr").click(function() {
            var row = myTable.row();
            var rowData = myTable.row( this ).data(); 
           
            $('#myModal').modal('show')
            let dataFromClick = this.innerText
            $('.modal-body').text(`Old value: ${dataFromClick}`)

             $('#id').val(`${rowData[0]}`) 
         
        }); 
            $('#save').on('click', function(event) {
              event.preventDefault();
          
               var ct = $('#nwct').val();
               var dt = $('#nwdt').val();
               var am = $('#nwam').val();
               var cm = $('#nwcm').val();

               var data = {};
               data.ct = ct;
               data.dt = dt;
               data.am = am;
               data.cm = cm;


                 $.ajax({
                    type: 'post',
                    data: JSON.stringify(data),
                    contentType: 'application/json',
                    url: 'http://localhost:4200/addingNew',
                    success: function(data) {
                      console.log('success');
                      console.log(JSON.stringify(data));
                      }
                });

            });
    });
</script> 

<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Editing Data</h5>
        <button class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body"></div>
      <div class="modal-text">
          <form action="/edit" method="post">
            <div class="form-group m-1">
                <label for="name">TRANSACTION ID</label>
                <input class="form-control" type="text" id="id" value="">
                <label for="name">Edit category</label>
                <input class="form-control" type="text" id="nwct" placeholder="Enter new value">
                <label for="name">Edit date</label>
                <input class="form-control" type="text" id="nwdt" placeholder="Enter new value">
                <label for="name">Edit amount</label>
                <input class="form-control" type="text" id="nwam" placeholder="Enter new value">
                <label for="name">Edit comment</label>
                <input class="form-control" type="text" id="nwcm" placeholder="Enter new value">

            </div>
          </form>
      </div>
      <div class="modal-footer m-auto">
        <button class="btn btn-success" data-dismiss="modal" id="save">Save</button>
        <button class="btn btn-secondary" data-dismiss="modal" id="close">Close</button>
      </div>
    </div>
  </div>
</div>



<div class="text-center text-light">
    <h1>Edit</h1>
</div>
<div class="table-wrapper-scroll-y divdt p-3">
    <table id="tableedit" class="table table-striped txttbl p-3" cellspacing="0">
        <thead class="font-weight-normal">
            <tr class="text-primary">
                <th>
                    ID
                </th>
                <th>
                    Category
                </th>
                <th>
                    Date
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Comment
                </th>
            </tr>
        </thead>
        <tbody>
            <% obj.forEach(function(name){ %>
            <tr>
                <td>
                    <%=name.main_transid %>
                </td>
                <td>
                    <%= name.categories_name %>
                </td>
                <td>
                    <%= name.main_date%>
                </td>
                <td>
                    <%= name.transactions_amount %>
                </td>
                <td>
                    <%= name.main_comment %>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div> 

<% include ../partials/footer %>